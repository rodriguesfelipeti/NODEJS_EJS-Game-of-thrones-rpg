<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% acoes.forEach(acao => { %>
			<%	
				var txt_acao = ''
				switch (parseInt(acao.acao)) {
					case 1: txt_acao = ' aldeão(ões) coletando recursos'
					break
					case 2: txt_acao = ' enforcamento(s) programado'
					break
					case 3: txt_acao = ' aldeão(ões) em treinamento de história'
					break
					case 4: txt_acao = ' aldeão(ões) em treinamento de magia'
					break
				}

				var date = new Date()
				var momento_atual = date.getTime()
				var segundos_restantes = Math.round((acao.acao_termina_eim - momento_atual) / 1000)

			%>
			<li>
				<%=acao.quantidade%> <%=txt_acao%>
				<small>restam <%=segundos_restantes%> segundos - <a href="#">revogar ordem</a></small>
			</li>	
		<% }) %>
	</ul>
</div>